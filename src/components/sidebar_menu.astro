];
---

<aside class="sidebar-menu">
  <nav class="py-8">
    <ul class="space-y-6">
      {menuItems.map((item) => (
        <li>
          <a href={item.url} class="sidebar-link text-lg hover:text-gray-500 transition-colors">
            {item.title}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</aside>

<style>
  .sidebar-menu {
    min-width: 180px;
    border-right: 1px solid #e5e7eb;
    padding-right: 1.5rem;
  }
  
  .sidebar-link {
    border-bottom: none;
    padding-bottom: 0;
    font-weight: 300;
  }
</style>