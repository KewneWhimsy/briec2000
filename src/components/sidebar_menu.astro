const menuItems = [
  { title: 'Accueil', url: '/' },
  { title: 'À venir', url: '/events/' },
  { title: 'Les cantines', url: '/cantines/' },
  { title: 'Le carnabal', url: '/events/2025-10-31-carnabal/' },
