---
// src/components/ghost.astro
// Un seul fantôme simple qui s'adapte aux couleurs des thèmes

import OptimizeImage from './optimize_image.astro';

export interface Props {
  className?: string;
  style?: string;
}

const { 
  className = '',
  style = ''
} = Astro.props;
---

<div 
  class={`ghost-simple ${className}`}
  style={style}
>
  <OptimizeImage 
    src="/src/assets/ghost.png" 
    alt="ooOOOOooo" 
    widths={[125]}
    class="ghost-img"
    loading="lazy"
  />
</div>

<style>
  .ghost-simple {
    position: absolute;
    width: 125px;
    height: 125px;
    user-select: none;
    z-index: 5;
  }

  .ghost-img {
    filter: var(--ghost-filter);
    transition: filter 0.3s ease;
  }

  /* Adaptation des couleurs des traits selon les thèmes */
  :root,
  html[data-theme="lavande"] {
    --ghost-filter: 
      brightness(0) saturate(100%) 
      invert(42%) sepia(23%) saturate(1234%) 
      hue-rotate(260deg) brightness(95%) contrast(95%);
  }

  html[data-theme="lavande-sombre"] {
    --ghost-filter: 
      brightness(0) saturate(100%) 
      invert(69%) sepia(18%) saturate(1456%) 
      hue-rotate(253deg) brightness(111%) contrast(91%);
  }

