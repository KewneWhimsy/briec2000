---
// src/components/bule.astro
// Bonhomme bule simple qui utilise les filtres th√©matiques globaux

import OptimizeImage from './optimize_image.astro';

export interface Props {
  className?: string;
  style?: string;
}

const { 
  className = '',
  style = ''
} = Astro.props;
---

<div 
  class={`bule-simple ${className}`}
  style={style}
>
  <OptimizeImage 
    src="/src/assets/bule500x500.png" 
    alt="bule bonhomme" 
    widths={[125]}
    class="bule-img theme-filtered"
    loading="lazy"
    transition:name="bule"
  />
</div>

<style>
  .bule-simple {
    position: absolute;
    width: 125px;
    height: 125px;
    user-select: none;
    z-index: 5;
  }
</style>