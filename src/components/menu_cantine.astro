---
// src/components/menu_cantine.astro
import { getCollection } from 'astro:content';
import type { EventEntry } from '../../types';

export interface Props {
  isDesktop?: boolean;
}

const { isDesktop = false } = Astro.props as Props;

// Récupérer automatiquement la prochaine cantine
const allEvents = await getCollection('events') as EventEntry[];
const currentDate = new Date();

const nextCantine = allEvents
  .filter((event: EventEntry) => {
    const eventDate = event.data.date instanceof Date ? 
      event.data.date : 
      new Date(event.data.date);
      
    return eventDate > currentDate && 
           event.data.draft !== true && 
           event.data.title.toLowerCase().includes('cantine');
  })
  .sort((a: EventEntry, b: EventEntry) => {
    const dateA = a.data.date instanceof Date ? a.data.date : new Date(a.data.date);
    const dateB = b.data.date instanceof Date ? b.data.date : new Date(b.data.date);
    return dateA.getTime() - dateB.getTime();
  })[0];

function getMonthName(date: Date | string): string {
  const dateObj = date instanceof Date ? date : new Date(date);
  const options: Intl.DateTimeFormatOptions = { month: "long" };
  return dateObj.toLocaleDateString("fr-FR", options);
}

// Parser le contenu markdown pour extraire les infos du menu
function parseMenuFromMarkdown(event: EventEntry) {
  const { body } = event;
  
  let menu = {
    entree: "",
    platPrincipal: "",
    platDescription: "",
    optionVeg: "",
    optionCarnee: "",
    dessert: "",
    dessertDesc: ""
  };

  const lines = body.split('\n');
  
  for (let i = 0; i < lines.length; i++) {
    const line = lines[i].trim();
    
    // Gestion flexible des différents formats
    if (line.startsWith('**Entrée :**') || line.startsWith('**Sandwich végé :**')) {
      const content = line.replace(/^\*\*[^:]+:\*\*/, '').trim();
      if (line.includes('végé')) {
        menu.optionVeg = content;
      } else {
        menu.entree = content;
      }
    }
    
    if (line.startsWith('**Plat principal :**') || line.startsWith('**Sandwich carné :**')) {
      const content = line.replace(/^\*\*[^:]+:\*\*/, '').trim();
      if (line.includes('carné')) {
        menu.optionCarnee = content;
      } else {
        menu.platPrincipal = content;
      }
      // Lire la description sur la ligne suivante si elle commence par *
      if (i + 1 < lines.length && lines[i + 1].trim().startsWith('*')) {
        menu.platDescription = lines[i + 1].trim().replace(/^\*/, '').replace(/\*$/, '').trim();
      }
    }
    
    if (line.startsWith('**Option végétarienne :**')) {
      menu.optionVeg = line.replace('**Option végétarienne :**', '').trim();
    }
    
    if (line.startsWith('**Option carnée :**')) {
      menu.optionCarnee = line.replace('**Option carnée :**', '').trim();
    }
    
    if (line.startsWith('**Dessert :**')) {
      menu.dessert = line.replace('**Dessert :**', '').trim();
      if (i + 1 < lines.length && lines[i + 1].trim().startsWith('*')) {
        menu.dessertDesc = lines[i + 1].trim().replace(/^\*/, '').replace(/\*$/, '').trim();
      }
    }
  }

  // Si on n'a pas trouvé d'entrée/plat principal, mais qu'on a des sandwichs, adapter l'affichage
  if (!menu.entree && !menu.platPrincipal && (menu.optionVeg || menu.optionCarnee)) {
    menu.platPrincipal = "Sandwichs chauds";
    menu.platDescription = "Fromage à raclette fondu et garniture au choix";
  }
  
  // Valeurs par défaut si rien n'est trouvé
  if (!menu.dessert) {
    menu.dessert = "Desserts maison";
    menu.dessertDesc = "Disponibles sur place uniquement";
  }

  return menu;
}
---

{nextCantine && (
  <div class={`menu-cantine-container rounded-lg overflow-hidden shadow-lg w-full ${isDesktop ? "fixed top-8 max-h-[90vh] overflow-y-auto max-w-96" : ""}`}>
    <!-- En-tête du menu -->
    <div class="bg-(--color-secondary) text-center p-3 relative flex justify-center">
      <div class="flex-1">
        <h3 class="text-xl font-bold tracking-wide" style="color: white;">La Cantine Mensuelle</h3>
        <p class="text-md italic text-white">Menu de {getMonthName(nextCantine.data.date)}</p>
      </div>
      
      <button 
        id="copy-menu-btn" 
        class="copy-menu-btn absolute top-3 right-3 bg-white/20 hover:bg-white/30 text-white rounded-full w-8 h-8 flex items-center justify-center transition-all hover:scale-110" 
        aria-label="Copier le menu" 
        title="Copier le menu"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
          <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
        </svg>
      </button>
    </div>

    <!-- Corps du menu -->
    <div class="p-4 bg-(--bg-color)">
      <div id="menu-content" class="space-y-4">
        {(() => {
          const menu = parseMenuFromMarkdown(nextCantine);
          return (
            <>
              <!-- Entrée (optionnelle) -->
              {menu.entree && (
                <div class="menu-section">
                  <h4 class="course-title text-lg text-(--color-primary) font-medium mb-2 pb-1 border-b border-(--color-border) relative">
                    Entrée
                    <span class="absolute bottom-0 left-0 w-12 h-0.5 bg-(--color-secondary)"></span>
                  </h4>
                  <div class="dish px-1">
                    <p class="dish-name font-medium text-(--text-color)">{menu.entree}</p>
                  </div>
                </div>
              )}

              <!-- Plat Principal -->
              {menu.platPrincipal && (
                <div class="menu-section">
                  <h4 class="course-title text-lg text-(--color-primary) font-medium mb-2 pb-1 border-b border-(--color-border) relative">
                    Plat Principal
                    <span class="absolute bottom-0 left-0 w-12 h-0.5 bg-(--color-secondary)"></span>
                  </h4>
                  <div class="dish px-1">
                    <p class="dish-name font-medium mb-1 text-(--text-color)">{menu.platPrincipal}</p>
                    {menu.platDescription && (
                      <p class="dish-description text-sm italic opacity-80 mb-3 leading-snug text-(--text-color)">{menu.platDescription}</p>
                    )}
                    <div class="dish-options space-y-3">
                      {menu.optionVeg && (
                        <div class="option p-2 rounded-md shadow-sm">
                          <span class="option-label font-medium block mb-1 text-(--text-color)">Option Végétarienne</span>
                          <span class="option-detail text-sm italic opacity-80 block leading-snug text-(--text-color)">{menu.optionVeg}</span>
                        </div>
                      )}
                      {menu.optionCarnee && (
                        <div class="option p-2 rounded-md shadow-sm">
                          <span class="option-label font-medium block mb-1 text-(--text-color)">Option Carnée</span>
                          <span class="option-detail text-sm italic opacity-80 block leading-snug text-(--text-color)">{menu.optionCarnee}</span>
                        </div>
                      )}
                    </div>
                  </div>
                </div>
              )}

              <!-- Dessert -->
              {menu.dessert && (
                <div class="menu-section">
                  <h4 class="course-title text-lg text-(--color-primary) font-medium mb-2 pb-1 border-b border-(--color-border) relative">
                    Dessert
                    <span class="absolute bottom-0 left-0 w-12 h-0.5 bg-(--color-secondary)"></span>
                  </h4>
                  <div class="dish px-1">
                    <p class="dish-name font-medium mb-1 text-(--text-color)">{menu.dessert}</p>
                    {menu.dessertDesc && (
                      <p class="dish-description text-sm italic opacity-80 text-(--text-color)">{menu.dessertDesc}</p>
                    )}
                  </div>
                </div>
              )}
            </>
          );
        })()}
      </div>
      
      <!-- Footer du menu avec notes personnalisables -->
      <div class="mt-4 pt-3 border-t border-(--color-border) text-center text-balance">
        {(nextCantine.data.menuNotes || [
          "Pensez à apporter vos contenants propres pour les repas à emporter.",
          "Réservation par mail briec2000@emailasso.net ou sur place au centre social"
        ]).map((note) => (
          <p class="menu-note text-sm italic opacity-70 mb-3 leading-snug text-(--text-color)">
            {note.includes('briec2000@emailasso.net') || note.includes('briec2000[at]emailasso.net') ? (
              <Fragment set:html={note.replace(/briec2000@emailasso\.net|briec2000\[at\]emailasso\.net/g, '<span class="email-copy">briec2000[at]emailasso.net</span>')} />
            ) : (
              note
            )}
          </p>
        ))}
        <a 
          href={`/events/${nextCantine.slug}/`} 
          class="inline-block px-4 py-2 bg-(--color-secondary) rounded-md hover:opacity-90 transition-opacity mt-2"
          style="color: white; text-decoration: none;"
        >
          Voir les détails
        </a>
      </div>
    </div>
  </div>
)}

<style>
  /* Border pour le menu cantine */
  .menu-cantine-container {
    border: 1px solid var(--color-border);
  }

  /* Ajout d'ombrages noirs forts pour l'en-tête du menu des cantines */
  
  /* En-tête principal */
  html[data-theme="amethyste-or"] .menu-cantine-container .bg-\[var\(--color-secondary\)\] h3,
  html[data-theme="gris-ambre"] .menu-cantine-container .bg-\[var\(--color-secondary\)\] h3,
  html[data-theme="bleu-jaune"] .menu-cantine-container .bg-\[var\(--color-secondary\)\] h3 {
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.6);
  }
  /* Sous-titre */
  html[data-theme="amethyste-or"] .menu-cantine-container .bg-\[var\(--color-secondary\)\] p,
  html[data-theme="gris-ambre"] .menu-cantine-container .bg-\[var\(--color-secondary\)\] p,
  html[data-theme="bleu-jaune"] .menu-cantine-container .bg-\[var\(--color-secondary\)\] p {
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.8);
  }
  /* Bouton "Plus d'infos sur les cantines" */
  html[data-theme="amethyste-or"] .menu-cantine-container a[href*="/events/"],
  html[data-theme="gris-ambre"] .menu-cantine-container a[href*="/events/"],
  html[data-theme="bleu-jaune"] .menu-cantine-container a[href*="/events/"] {
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.9);
  }

  /* Styles adaptatifs pour les arrière-plans des options selon les thèmes */
  .option {
    background-color: rgba(255, 255, 255, 0.5);
  }

  /* Animation du bouton copie */
  .copy-menu-btn.copied {
    background-color: rgba(34, 197, 94, 0.8) !important;
    transform: scale(1.1);
  }
</style>