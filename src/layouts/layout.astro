---
import Footer from "./footer.astro";
import SidebarMenu from "../components/sidebar_menu.astro";
import ThemeSwitcher from "../components/theme_switcher.astro";
import "../styles/global.css";
import { Font } from "astro:assets";

// Définissez les props que vous souhaitez passer à votre layout
interface Props {
  title: string;
  description?: string;
  image?: string;
}

// Récupérez les props avec des valeurs par défaut
const {
  title,
  description = "Briec2000 - Site de l'Association",
  image = "/images/default-og.png",
} = Astro.props;

// Pour vérifier les liens actifs exacts et éviter les faux positifs
const currentPath = Astro.url.pathname;
---


<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta property="og:image" content={image} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>

    <!-- Script pour éviter le flash de couleur -->
    <script is:inline>
      (function() {
        // Récupérer le thème sauvegardé
        var savedTheme = localStorage.getItem("selected-theme");
        
        // Si pas de thème sauvegardé, utiliser la préférence système
        if (!savedTheme) {
          var prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
          savedTheme = prefersDark ? "midnight" : "ocean";
        }
        
        // Appliquer le thème immédiatement
        document.documentElement.setAttribute("data-theme", savedTheme);
      })();
    </script>
    <Font name="Andika" cssVariable="--font-andika" preload />
    <Font name="Champ" cssVariable="--font-champ" preload />

    <style is:global>
      /* Styles de base */
      body {
        background-color: var(--bg-color);
        color: var(--text-color);
        font-family: var(--font-andika);
        transition: background-color 0.3s ease, color 0.3s ease;
      }

      h1, h2, h3, h4, h5, h6 {
        color: var(--color-primary);
        transition: color 0.3s ease;
        font-family: var(--font-champ);
      }

      a {
        color: var(--color-primary);
        text-decoration: none;
      }

      .email-copy{
        text-decoration: underline;
      }

      .btn {
        border: 1px solid var(--color-primary);
        color: var(--color-primary);
        background-color: transparent;
        padding: 0.5rem 1rem;
        border-radius: 0.25rem;
        text-decoration: none;
        display: inline-block;
        transition: all 0.2s ease;
      }

      .btn:hover {
        background-color: var(--color-primary);
        color: var(--bg-color);
        text-decoration: none;
      }

      @view-transition {
        navigation: auto;
      }
      
      /* Style pour le menu simplifié */
      .simple-nav {
        width: 100%;
      }
      
      .nav-link {
        color: var(--color-primary);
        font-size: 0.95rem;
        text-decoration: none;
        padding: 0.25rem 0;
      }
      
      .nav-link:hover {
        text-decoration: none;
        opacity: 0.8;
      }
      
      /* Adaptation pour les différentes tailles d'écran */
      @media (min-width: 768px) {
        /* Sur desktop, cacher ce menu et utiliser le sidebar */
        header .simple-nav {
          display: none;
        }
      }
    </style>
  </head>
  <body class="min-h-screen flex flex-col">
    <header
      class="border-b py-4 px-4 md:hidden"
      style="border-color: var(--color-border);"
    >
      <div class="flex justify-between items-center mb-2">
        <ThemeSwitcher />
        <span class="text-lg font-medium" style="color: var(--color-primary);">Briec2000</span>
      </div>
      
      <!-- Menu simplifié avec flex-wrap et les mêmes liens que sidebar_menu.astro -->
      <nav class="simple-nav py-2">
        <ul class="flex flex-wrap gap-x-4 gap-y-2">
          <li><a href="/" class="nav-link">Accueil</a></li>
          <li><a href="/events/" class="nav-link">À venir</a></li>
          <li><a href="/cantines/" class="nav-link">Les cantines</a></li>
          <li><a href="/events/2025-10-31-carnabal/" class="nav-link">Le carnabal</a></li>
          <li><a href="/about/" class="nav-link">L'association</a></li>
          <li><a href="/archives/" class="nav-link">Archives</a></li>
        </ul>
      </nav>
    </header>

    <main class="flex-grow container mx-auto px-4 py-6 md:py-12 flex">
      <!-- Menu latéral pour desktop -->
      <div class="hidden md:block">
        <div class="flex items-center justify-between mb-8">
          <ThemeSwitcher />
        </div>
        <SidebarMenu />
      </div>

      <!-- Contenu principal -->
      <div class="md:ml-12 w-full mx-auto">
        <slot />
      </div>
    </main>

    <Footer />

    <script>
      // Script pour les liens d'email
      document.addEventListener("DOMContentLoaded", () => {
        const emailCopyLinks = document.querySelectorAll(".email-copy");

        emailCopyLinks.forEach((link) => {
          link.addEventListener("click", (e) => {
            e.preventDefault();
            const email = "briec2000@emailasso.net";
            navigator.clipboard.writeText(email);
            alert("Email copié !");
          });
        });
        
        // Mettre à jour le bouton de thème actif
        const currentTheme = document.documentElement.getAttribute("data-theme");
        if (currentTheme) {
          const themeButton = document.querySelector(`.theme-btn[data-theme="${currentTheme}"]`);
          if (themeButton) {
            themeButton.classList.add("active");
          }
        }
      });
    </script>
  </body>
</html>