---
import Footer from "./footer.astro";
import SidebarMenu from "../components/sidebar_menu.astro";
import ThemeSwitcher from "../components/theme_switcher.astro";
import "../styles/global.css";

// Définissez les props que vous souhaitez passer à votre layout
interface Props {
  title: string;
  description?: string;
  image?: string;
}

// Récupérez les props avec des valeurs par défaut
const {
  title,
  description = "Briec2000 - Site de l'Association",
  image = "/images/default-og.png",
} = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta property="og:image" content={image} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>

    <!-- Script pour éviter le flash de couleur -->
    <script is:inline>
      (function() {
        // Récupérer le thème sauvegardé
        var savedTheme = localStorage.getItem("selected-theme");
        
        // Si pas de thème sauvegardé, utiliser la préférence système
        if (!savedTheme) {
          var prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
          savedTheme = prefersDark ? "midnight" : "ocean";
        }
        
        // Appliquer le thème immédiatement
        document.documentElement.setAttribute("data-theme", savedTheme);
      })();
    </script>

    <style is:global>
      /* Thèmes simples : 2 clairs, 2 sombres */
      :root {
        /* Thème par défaut - Océan (clair) */
        --color-primary: #1a4d7c;
        --color-secondary: #5885a9;
        --color-accent: #f58a42;
        --bg-color: #edf2f7;
        --text-color: #2d3748;
        --color-border: #d1dce8;
      }

      /* Thème Nature (clair) */
      html[data-theme="nature"] {
        --color-primary: #2e6b4a;
        --color-secondary: #6ea87c;
        --color-accent: #e63946;
        --bg-color: #eef5ee;
        --text-color: #2a3b2d;
        --color-border: #d7e6db;
      }

      /* Thème Minuit (sombre) */
      html[data-theme="midnight"] {
        --color-primary: #6889c2;
        --color-secondary: #415a89;
        --color-accent: #f7a046;
        --bg-color: #1f2937;
        --text-color: #e2e8f0;
        --color-border: #374151;
      }

      /* Thème Forêt (sombre) */
      html[data-theme="forest"] {
        --color-primary: #8fb996;
        --color-secondary: #4d7a5a;
        --color-accent: #e9b44c;
        --bg-color: #1a2721;
        --text-color: #e2e8d5;
        --color-border: #2d433a;
      }

      /* Styles de base */
      body {
        background-color: var(--bg-color);
        color: var(--text-color);
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        transition: background-color 0.3s ease, color 0.3s ease;
      }

      h1, h2, h3, h4, h5, h6 {
        color: var(--color-primary);
        transition: color 0.3s ease;
      }

      a {
        color: var(--color-primary);
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      .btn {
        border: 1px solid var(--color-primary);
        color: var(--color-primary);
        background-color: transparent;
        padding: 0.5rem 1rem;
        border-radius: 0.25rem;
        text-decoration: none;
        display: inline-block;
        transition: all 0.2s ease;
      }

      .btn:hover {
        background-color: var(--color-primary);
        color: var(--bg-color);
        text-decoration: none;
      }

      @view-transition {
        navigation: auto;
      }
    </style>
  </head>
  <body class="min-h-screen flex flex-col">
    <header
      class="border-b py-4 px-4 md:hidden"
      style="border-color: var(--color-border);"
    >
      <div class="flex justify-between items-center">
        <ThemeSwitcher />
        <button id="menuToggle" aria-label="Menu" class="ml-3" style="color: var(--color-primary);"> ☰ </button>
      </div>
    </header>

    <!-- Menu mobile -->
    <div
      id="mobileMenu"
      class="md:hidden border-b py-4 px-6 hidden"
      style="border-color: var(--color-border);"
    >
      <nav>
        <ul class="space-y-4">
          <li><a href="/" class="text-lg">Accueil</a></li>
          <li><a href="/about" class="text-lg">À propos</a></li>
          <li><a href="/events/" class="text-lg">Événements</a></li>
          <li><a href="/cantines/" class="text-lg">Cantines</a></li>
        </ul>
      </nav>
    </div>

    <main class="flex-grow container mx-auto px-4 py-6 md:py-12 flex">
      <!-- Menu latéral pour desktop -->
      <div class="hidden md:block">
        <div class="flex items-center justify-between mb-8">
          <ThemeSwitcher />
        </div>
        <SidebarMenu />
      </div>

      <!-- Contenu principal -->
      <div class="md:ml-12 w-full mx-auto">
        <slot />
      </div>
    </main>

    <Footer />

    <script>
      // Script pour le menu mobile
      document.addEventListener("DOMContentLoaded", () => {
        const menuToggle = document.getElementById("menuToggle");
        const mobileMenu = document.getElementById("mobileMenu");

        if (menuToggle && mobileMenu) {
          menuToggle.addEventListener("click", () => {
            mobileMenu.classList.toggle("hidden");
          });
        }

        // Script pour les liens d'email
        const emailCopyLinks = document.querySelectorAll(".email-copy");

        emailCopyLinks.forEach((link) => {
          link.addEventListener("click", (e) => {
            e.preventDefault();
            const email = "briec2000@emailasso.net";
            navigator.clipboard.writeText(email);
            alert("Email copié !");
          });
        });
        
        // Mettre à jour le bouton de thème actif
        const currentTheme = document.documentElement.getAttribute("data-theme");
        if (currentTheme) {
          const themeButton = document.querySelector(`.theme-btn[data-theme="${currentTheme}"]`);
          if (themeButton) {
            themeButton.classList.add("active");
          }
        }
      });
    </script>
  </body>
</html>